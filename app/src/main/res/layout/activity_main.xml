<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/result"
        android:text="0"
        android:paddingTop="30dp"
        android:gravity="right"
        android:textSize="70sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/ac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C/AC"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/clear"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/openb"
        app:layout_constraintBottom_toTopOf="@id/button1"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:onClick="onButtonClick"
        android:layout_margin="5sp"
        android:tag="ac"
        />

    <Button
        android:id="@+id/openb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="("
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/ac"
        app:layout_constraintEnd_toStartOf="@id/closeb"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="openb"
        />

    <Button
        android:id="@+id/closeb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=")"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/openb"
        app:layout_constraintEnd_toStartOf="@id/mod"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="closeb"
        />

    <Button
        android:id="@+id/mod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="󠀥󠀥󠀥%"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/closeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divide"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="divide"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/ac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:onClick="onButtonClick"
        android:layout_margin="5sp"
        android:tag="1"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/openb"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="2"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/closeb"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/divide"
        app:layout_constraintBottom_toTopOf="@id/button6"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="3"
        />

    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="➗"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/mod"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/multiply"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="divide"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button7"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="4"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintBottom_toTopOf="@id/button8"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="5"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintBottom_toTopOf="@id/button9"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="6"
        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="✖️"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/divide"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="multiply"
        />
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="7"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/dot"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="8"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@id/sub"
        app:layout_constraintBottom_toTopOf="@id/add"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="9"
        />

    <Button
        android:id="@+id/sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="➖"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equal"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="sub"
        />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="0"
        />

    <Button
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="•"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/numbers"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="0"
        />

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="➕"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/operations"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/dot"
        app:layout_constraintEnd_toStartOf="@id/equal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="add"
        />

    <Button
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="🟰"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/equal"
        app:layout_constraintTop_toBottomOf="@id/sub"
        app:layout_constraintStart_toEndOf="@id/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintHeight_min="50dp"
        android:layout_margin="5sp"
        android:onClick="onButtonClick"
        android:tag="equal"
        />


</androidx.constraintlayout.widget.ConstraintLayout>